<p id="notice"><%= notice %></p>
<h1>詳細画面</h1>
<table class="table table-hover">
  <div class="show">
    <tbody>         
      <%= form_with(model: @blog, local: true) do |form| %>
        <tr>
          <th>タイトル</th>
          <td><%= @blog.title %></td>
        </tr>
        <tr>
          <th>内容</th>
          <td><%= @blog.content %></td>
        </tr>
        <tr>
          <th>登録日時</th>
          <td><%= @blog.created_at %></td>
        </tr>
        <tr>
          <th>予約日時</th>
          <td><%= @blog.start_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>                       
    </tbody> 
  </div><!--/.show-->
</table>
<%= link_to "編集画面", edit_blog_path, class: 'btn btn-primary' %>    
<%= link_to '消去', blog_path(@blog.id), method: :delete, data: { confirm: '本当に?' } , class: 'btn btn-danger'%>
<%= link_to '戻る', blogs_path , class: 'btn btn-secondary'%>
